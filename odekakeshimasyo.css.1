/* clearfix */
body:after, section:after, header:after,  menu:after, main:after, article:after, nav:after, footer:after, div:after, .c:after {content:" ";display: table;clear:both;height:0;}

/* common */
body, section, header, menu, main, article, aside, summary, nav, footer .c {display:block;margin:0;}
* {box-sizing:border-box;font-family:'Hiragino Kaku Gothic ProN',Meiryo, sans-serif;}
a {text-decoration:none;color:blue;}
a:hover {text-decoration:underline;}
a:focus {outline-color:#999;}
h1 {font-size:2em;margin:0.7em 0 0 0;}
h1:before {content: '# ';}
h2 {font-size:180%;margin:2em 0 0 0;}

/* style */
html {height:100%;}
body {min-height:100%;display:flex;flex-wrap:nowrap;align-items:stretch;color:#515151;}/* background-color:#fe0192, #c5006a, #131631*/
body > nav {min-width:20em;min-height:100%;background-color:#c5006a;padding:0 1em 2em 0;}
body > nav * {color:#fff;}
body > nav ul {list-style-type:none;padding-left:20px;}
body > nav ul li {font-size:0.8em;text-overflow:ellipsis;overflow-x:hidden;white-space:nowrap;}
body > nav ul li:first-child {font-size:1.7em;font-weight:normal;line-height:2em;}
body > section {padding:0 6%;min-height:100%;width:100%;word-break:break-all;}

pre code {word-break:break-word;font-size:85%;}
blockquote {border-left:5px solid #ccc;margin:0 0 0 1em;padding:1px 1em;}
em {color:red;}
